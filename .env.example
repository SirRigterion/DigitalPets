# =========================
# PostgreSQL
# =========================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=postgres

# =========================
# Redis
# =========================
REDIS_URL=redis://redis:6379/0
REDIS_TTL=600  # TTL для кэширования в секундах
REDIS_PORT=6379

# =========================
# CORS и безопасность
# =========================
ALLOWED_ORIGINS=http://127.0.0.1:5137,https://domain.com
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
PASSWORD_PEPPER=your-pepper-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =========================
# Загрузка файлов
# =========================
UPLOAD_DIR=/app/uploads
AVATAR_DIR=/app/uploads/avatars

# =========================
# Администратор
# =========================
ADMIN_IMAGES=user-1-admin.jpg
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com

# =========================
# Cookie и сессии
# =========================
COOKIE_MODE=false  # true если использовать httpOnly cookies для токенов

# =========================
# URLs приложения
# =========================
FRONTEND_URL=http://127.0.0.1:5137
BACKEND_URL=http://127.0.0.1:8000/api/v1

# =========================
# SMTP / почта
# =========================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_STARTTLS=true
SMTP_USE_SSL=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=your-email@gmail.com

# =========================
# Токены и верификация
# =========================
TOKEN_TTL_SECONDS=86400
TOKEN_RESEND_MAX=5
TOKEN_RESEND_WINDOW_SECONDS=86400
RESET_PASSWORD_TTL_SECONDS=3600
VERIFICATION_TTL_SECONDS=86400

# =========================
# Кэш изображений
# =========================
IMAGE_CACHE_TTL=3600
IMAGE_CACHE_MAX_BYTES=500000

# =========================
# Yandex AI / GPT
# =========================
YANDEX_FOLDER_ID=your-folder-id
YANDEX_API_KEY=your-api-key
YANDEX_MODEL=yandexgpt-lite
YANDEX_TEMPERATURE=0.7
YANDEX_MAX_TOKENS=150

# =========================
# OpenWeather
# =========================
OPENWEATHER_API_KEY=your-openweather-api-key

# =========================
# Тайминги питомцев
# =========================
PET_DECAY_INTERVAL_SECONDS=1800
PET_ATTRACTION_INTERVAL_SECONDS=3600

# =========================
# Nginx
# =========================
NGINX_PORT=80
